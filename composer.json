{
    "name": "okapi/aop",
    "description": "PHP AOP is a PHP library that provides a powerful Aspect Oriented Programming (AOP) implementation for PHP.",
    "version": "1.0.0",
    "type": "library",
    "homepage": "https://github.com/okapi-web/php-aop",
    "license": "MIT",
    "authors": [
        {
            "name": "WalterWoshid",
            "email": "wotschel.valentin@googlemail.com",
            "homepage": "https://github.com/WalterWoshid"
        }
    ],
    "keywords": [
        "aop",
        "aspect-oriented-programming",
        "php",
        "php-aop"
    ],
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html tests/coverage"
    },
    "require": {
        "php": ">=8.1",
        "nette/php-generator": "^4.0",
        "okapi/code-transformer": "^1.3",
        "okapi/wildcards": "^1.0",
        "okapi/singleton": "^1.0",
        "php-di/php-di": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10",
        "symfony/var-dumper": "^6.2"
    },
    "autoload": {
        "psr-4": {
            "Okapi\\Aop\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Okapi\\Aop\\Tests\\": "tests/"
        }
    }
}
